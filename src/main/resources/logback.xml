<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="BATTERT_TASK_FILE" value="batteryTask.log" />
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <logger name="file" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    <appender name="BATTERT_TASK" class="ch.qos.logback.core.FileAppender">
        <file>${BATTERT_TASK_FILE}</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="com.deliverydrone.task.DroneBatteryCheckTask" level="INFO" additivity="false">
        <appender-ref ref="BATTERT_TASK"/>
    </logger>

</configuration>